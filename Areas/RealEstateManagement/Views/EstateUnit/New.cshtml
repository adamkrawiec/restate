@using restate.RealEstateManagement.Models;
@model restate.RealEstateManagement.Models.EstateUnit;
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers;

@{
    ViewData["Title"] = "Add New Estate Unit";
}

<h1>Add New Estate Unit</h1>

<div class="container">
    <div class="row">
        <div class="col-md-4">
            @using (Html.BeginForm("Create", "EstateUnit", new { realEstateId = ViewBag.RealEstate.Id }, FormMethod.Post))
            {
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Name" class="control-label"></label>
                    <input asp-for="Name" class="form-control" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="UnitNumber" class="control-label"></label>
                    <input asp-for="UnitNumber" class="form-control" />
                    <span asp-validation-for="UnitNumber" class="text-danger"></span>
                </div>
                <div class="form-group">
                <label asp-for="Area" class="control-label"></label>
                <input asp-for="Area" class="form-control" />
                </div>
                <div class="form-group">
                <label asp-for="Type" class="control-label"></label>
                    @Html.DropDownList(
                        "Type",
                        Html.GetEnumSelectList<EstateUnitType>(),
                        "Select Real Estate type",
                        new { @class = "form-control" }
                    )
                </div>
                <div class="form-group">
                    <input type="submit" value="Create" class="btn btn-primary" />
                </div>
            }
        </div>
    </div>

    <div>
        <a asp-action="Index">Back to List</a>
    </div>
</div>